<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bulksms.tdd.tddbulksms.activity.TaskFinished">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/activity_task_finished"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvSent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight=".90"
                android:text="SENT : 15"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="4dp"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/tvDeliverd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight=".90"
                android:text="DELIVERED : 12"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDeliveredlist"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_below="@+id/activity_task_finished"
            tools:listitem="@layout/recyclerview_deliveredlist"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btCopyDeliveredNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rvDeliveredlist"
            android:layout_margin="5dp"
            android:background="@color/buttonbak"
            android:text="Copy Delivered Numbers" />
    </RelativeLayout>


</ScrollView>

