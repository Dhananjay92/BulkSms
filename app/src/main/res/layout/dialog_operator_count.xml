<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:text="All:10"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvGp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:text="GrameenPhone:10"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvBlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:text="BanglaLink:10"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvRobi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:text="Robi:10"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvAirtel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:text="Airtel:10"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvTTalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:text="Teletalk:10"/>


</LinearLayout>