<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bulksms.tdd.tddbulksms.activity.UndeliveredList"
    tools:showIn="@layout/activity_undelivered_list">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="Undelivered Numbers"
            android:textSize="20dp" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvUnliveredlist"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/layout1"
        tools:listitem="@layout/recyclerview_deliveredlist">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btCopyNumbers"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffd700"
        android:layout_below="@+id/rvUnliveredlist"
        android:text="Copy Undelivered Number" />

</RelativeLayout>
